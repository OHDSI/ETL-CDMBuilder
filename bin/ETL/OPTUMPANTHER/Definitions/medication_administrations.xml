<QueryDefinition>
  <Query>
    select distinct
    m.encid,
    ch.person_id as PersonId,
    pr.provid provid,
    m.order_date,
    m.route,
    m.dose_frequency,
    m.strength,
    m.strength_unit,
    m.quantity_of_dose,
    m.ndc,
    SUBSTRING(m.ndc,1,9) ndc_9,
    m.orderid
    from {sc}.medication_administrations as m
    JOIN {sc}._chunks ch ON ch.ChunkId = {0} AND m.ptid = ch.PERSON_SOURCE_VALUE
    left join {sc}.provider pr on m.provid = pr.provid
    where ndc is not NULL
    order by 2
  </Query>
  <DrugExposure>
    <DrugExposureDefinition>
      <PersonId>PersonId</PersonId>
      <StartDate>order_date</StartDate>
      <EndDate>order_date</EndDate>
      <ProviderIdKey>provid</ProviderIdKey>
      <DoseUnitSourceValue>strength_unit</DoseUnitSourceValue>
      <Quantity>quantity_of_dose</Quantity>
      <AdditionalFields>
        <string>encid</string>
      </AdditionalFields>
      <Concepts>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Drug</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="ndc" defaultTypeId="38000180" />
            <Field key="ndc_9" sourceKey="ndc"  defaultTypeId="38000180" />
          </Fields>
        </Concept>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Route</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="route" defaultTypeId="0"/>
          </Fields>
        </Concept>
      </Concepts>
    </DrugExposureDefinition>
  </DrugExposure>
</QueryDefinition>