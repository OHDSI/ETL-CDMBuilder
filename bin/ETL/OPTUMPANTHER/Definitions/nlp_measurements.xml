<QueryDefinition>
  <Query database="full">
    select
    ch.person_id as PersonId,
    n.measurement_date,
    n.measurement_type,
    n.measurement_detail,
    n.measurement_value as test_result,
    n.encid,
    'measurement_type:' + isnull(n.measurement_type, '') +
    ';measurement_value:' + isnull(n.measurement_value, '') +
    ';measurement_detail:' + isnull(n.measurement_detail, '') +
    ';measurement_year:' + isnull(cast(n.measurement_year as varchar), '')  +
    ';measurement_monthyear:' + isnull(n.measurement_monthyear, '') +
    ';measurement_date:' + isnull(cast(n.measurement_date as varchar), '')
    as note_text,
    'NLP_MEASUREMENT' as note_title,
    n.note_section,
    40639387 as language_concept_id
    from {sc}.nlp_measurement n
    JOIN {sc}._chunks ch ON ch.ChunkId = {0} AND n.ptid = ch.PERSON_SOURCE_VALUE
    order by 1
  </Query>
  <Measurement>
    <MeasurementDefinition>
      <PersonId>PersonId</PersonId>
      <StartDate>measurement_date</StartDate>
      <ValueSourceValue>test_result</ValueSourceValue>
      <AdditionalFields>
        <string>test_result</string>
        <string>encid</string>
      </AdditionalFields>
      <Concepts>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Nlpm</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="measurement_type" defaultTypeId="45754907"/>
          </Fields>
        </Concept>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Lab_Units</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="measurement_detail" defaultTypeId="0" />
          </Fields>
        </Concept>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>LabRes</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="test_result" defaultTypeId="0" />
          </Fields>
        </Concept>
      </Concepts>
    </MeasurementDefinition>
  </Measurement>
  <Note>
    <NoteDefinition>
      <PersonId>PersonId</PersonId>
      <StartDate>measurement_date</StartDate>
      <Title>note_title</Title>
      <Text>note_text</Text>
      <LanguageConceptId>language_concept_id</LanguageConceptId>
      <AdditionalFields>
        <string>encid</string>
      </AdditionalFields>
      <Concepts>
        <Concept>
          <Fields>
            <Field key="note_section" defaultConceptId="44817649" defaultTypeId="44814645"/>
          </Fields>
        </Concept>
      </Concepts>
    </NoteDefinition>
  </Note>
</QueryDefinition>