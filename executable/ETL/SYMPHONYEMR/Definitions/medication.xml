<QueryDefinition>
  <Query>
    SELECT
    patient_id
    , ecntr_id
    , ndc_cde
    , cvx_cde
    , sig_cde
    , mdctn_unts_qty
    , mdctn_name
    , dspns_qty
    , day_sply_nbr
    , refil_nbr
    , ptnt_mdctn_strt_dte_tstmp
    , ptnt_mdctn_end_dte_tstmp
    from {sc}.medication
    JOIN {sc}._chunks ch ON ch.ChunkId = {0} AND patient_id = ch.PERSON_ID
    order by patient_id
  </Query>
  <DrugExposure>
    <DrugExposureDefinition>
      <PersonId>patient_id</PersonId>
      <StartDate>ptnt_mdctn_strt_dte_tstmp</StartDate>
      <VerbatimEndDate>ptnt_mdctn_end_dte_tstmp</VerbatimEndDate>
      <VisitOccurrenceId>ecntr_id</VisitOccurrenceId>
      <Sig>sig_cde</Sig>
      <DoseUnitSourceValue>mdctn_unts_qty</DoseUnitSourceValue>
      <Quantity>dspns_qty</Quantity>
      <DaysSupply>day_sply_nbr</DaysSupply>
      <Refill>refil_nbr</Refill>
      <Concepts>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Ndc</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="ndc_cde" defaultTypeId="0"/>
          </Fields>
        </Concept>
      </Concepts>
    </DrugExposureDefinition>
    <DrugExposureDefinition>
      <PersonId>patient_id</PersonId>
      <StartDate>ptnt_mdctn_strt_dte_tstmp</StartDate>
      <VerbatimEndDate>ptnt_mdctn_end_dte_tstmp</VerbatimEndDate>
      <VisitOccurrenceId>ecntr_id</VisitOccurrenceId>
      <Sig>sig_cde</Sig>
      <DoseUnitSourceValue>mdctn_unts_qty</DoseUnitSourceValue>
      <Quantity>dspns_qty</Quantity>
      <DaysSupply>day_sply_nbr</DaysSupply>
      <Refill>refil_nbr</Refill>
      <Concepts>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Cvx</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="cvx_cde" defaultTypeId="1"/>
          </Fields>
        </Concept>
      </Concepts>
    </DrugExposureDefinition>
    <DrugExposureDefinition>
      <PersonId>patient_id</PersonId>
      <StartDate>ptnt_mdctn_strt_dte_tstmp</StartDate>
      <VerbatimEndDate>ptnt_mdctn_end_dte_tstmp</VerbatimEndDate>
      <VisitOccurrenceId>ecntr_id</VisitOccurrenceId>
      <Sig>sig_cde</Sig>
      <DoseUnitSourceValue>mdctn_unts_qty</DoseUnitSourceValue>
      <Quantity>dspns_qty</Quantity>
      <DaysSupply>day_sply_nbr</DaysSupply>
      <Refill>refil_nbr</Refill>
      <Concepts>
        <Concept>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>Drug</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="mdctn_name" defaultTypeId="2"/>
          </Fields>
        </Concept>
      </Concepts>
    </DrugExposureDefinition>
  </DrugExposure>
</QueryDefinition>