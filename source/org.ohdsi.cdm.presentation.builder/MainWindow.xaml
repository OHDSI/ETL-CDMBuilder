                                            <ContextMenu>
                                                <MenuItem Header="Create tables" Command ="{Binding Path=CreateTablesStepCommand}"/>
                                                <!--<MenuItem Header="Drop tables" Command ="{Binding Path=DropTableStepCommand}"/>-->
